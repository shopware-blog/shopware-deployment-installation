{
  "name": "shopware/composer-project",
  "description": "Project template for Shopware projects with composer",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Shopware",
      "email": "info@shopware.com"
    }
  ],
  "autoload": {
    "classmap": [
      "app/AppKernel.php"
    ]
  },
  "require": {
    "php": "^7.0",
    "composer/installers": "^1.0",
    "shopware/shopware": "^5.4",
    "vlucas/phpdotenv": "~2.0",
    "shopware-blog/shopware-environment-variables": "^0.0.3"
  },
  "extra": {
    "installer-paths": {
      "Plugins/Local/Backend/{$name}/": [
        "type:shopware-backend-plugin"
      ],
      "Plugins/Local/Core/{$name}/": [
        "type:shopware-core-plugin"
      ],
      "Plugins/Local/Frontend/{$name}/": [
        "type:shopware-frontend-plugin"
      ]
    }
  },
  "include-path": [
    "engine/Library/"
  ],
  "config": {
    "optimize-autoloader": true,
    "process-timeout": 0
  },
  "scripts": {
    "post-root-package-install": [
      "./app/post-install.sh"
    ],
    "post-install-cmd": [
      "./app/post-install.sh"
    ],
    "post-update-cmd": [
      "./app/post-update.sh"
    ]
  }
}
